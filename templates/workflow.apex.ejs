trigger <%= triggerName %> on <%= objectName %> (before update) {
  if (Trigger.isBefore && Trigger.isUpdate) {
    for (<%= objectName %> record : Trigger.New) {
      <% rules.forEach((rule) => { %>
      if (<%- rule.condition %>) {
        <% rule.actions.forEach((action) => { %>
          <%- toApexCode(action) %>
        <% }) %>
      }
      <% }) %>
    }
  }
}